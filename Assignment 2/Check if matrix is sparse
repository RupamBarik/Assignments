C
#include <stdio.h>
int isSparse(int mat[100][100], int m, int n) {
    int count = 0;
    for (int i=0; i<m; i++)
        for (int j=0; j<n; j++)
            if (mat[i][j] == 0)
                count++;
    return (count > (m*n)/2);
}

Python 
def is_sparse(matrix):
    m, n = len(matrix), len(matrix[0])
    zeros = sum(row.count(0) for row in matrix)
    return zeros > (m * n) // 2
